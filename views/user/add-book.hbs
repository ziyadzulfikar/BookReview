<section>
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-6">
                <h2 class="text-center">Products</h2>
                <form action="/user/add-book" method="POST" enctype="multipart/form-data">
                    <label for="">Name Of the Book</label>
                    <input type="text" name="Name" class="form-control">

                    <label for="">Genre</label>
                    <input type="text" name="Category" class="form-control">

                    <label for="">ISBN Number</label>
                    <input type="text" name="ISBN" class="form-control">

                    <label for="">Author Name</label>
                    <input type="text" name="Author" class="form-control">

                    <label for="">Language</label>
                    <input type="text" name="Language" class="form-control">

                    <label for="">Year Of Publication</label>
                    <input type="text" name="Publication" class="form-control">

                    <label for="">Price</label>
                    <input type="text" name="Price" class="form-control">
                    
                    <label for="">Please mention the link to buy your Book</label>
                    <input type="text" name="Link" class="form-control">

                    <label for="">Description</label>
                    <input type="text" name="Description" class="form-control">

                    <input type="text" name="UserId" class="form-control" value="{{userId}}" hidden>

                    <label for="">Image</label>
                    <input type="file" name="Image" class="form-control">

                    <button type="submit" class="btn btn-success mt-4">Submit</button>
                </form>
            </div>
            
        </div>
    </div>
</section>