{{#if user}}
  <div class="page-section bg-dark fg-white">
    <div class="container">
      <h1 class="text-center">Best Collections</h1>
      <div class="row justify-content-center mt-5">
        {{#each books}}
            <div class="col-md-6 col-lg-3 py-3">
                <div class="card border-0 bg-transparent  wow zoomIn text-center" data-wow-delay="200ms">
                    <img style="height: 40vh; width: 100%;" src="/book-images/{{this._id}}.jpg" class="card-img-top img-thumbnail" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">{{this.Name}}</h5>
                        <p style="font-size: x-small;">{{this.Category}}</p>
                        <hr>
                          <a
                            {{!-- href="/book-reviews/{{this._id}}" --}}
                            
                            type="button"
                            class="btn btn-light text-dark btn-sm mr-1 mb-2"
                            data-mdb-toggle="modal"
                            data-mdb-target="#id{{this._id}}"
                          ><i class="fas fa-info-circle pr-2"></i>
                            Details
                          </a>
                          <a href="{{this.Link}}" type="button" class="btn btn-success btn-sm px-2 mb-2 material-tooltip-main" data-toggle="tooltip"
                  data-placement="top" title="Add to wishlist"><i class="fas fa-rupee-sign"></i>{{this.Price}}</a>

                          <!-- Modal -->
                          <div
                            class="modal fade"
                            id="id{{this._id}}"
                            tabindex="-1"
                            aria-labelledby="id{{this._id}}Label"
                            aria-hidden="true"
                          >
                            <div class="modal-dialog modal-xl">
                              <div class="modal-content">
                                <div class="modal-header">
                                  <h5 class="modal-title text-dark" id="id{{this._id}}Label">{{this.Name}}</h5>
                                  
                                  <button
                                    type="button"
                                    class="btn-close"
                                    data-mdb-dismiss="modal"
                                    aria-label="Close"
                                  ></button>
                                </div>
                                  <div class="modal-body text-dark">
                                    <div class="d-flex justify-content-evenly">
                                      {{!-- <img style="height: 40vh;" src="/book-images/{{this._id}}.jpg" class="card-img-top img-thumbnail w-25" alt="..."> --}}
                                      <div class="float-right"> 
                                        <div class="card mb-3" style="max-width: 100%;">
                                          <div class="row g-0">
                                            <div class="col-md-3">
                                              <img
                                                src="/book-images/{{this._id}}.jpg"
                                                alt="..."
                                                class="img-fluid card-img-top img-thumbnail"
                                                style="height: 40vh;"
                                              />
                                            </div>
                                            <div class="col-md-9">
                                              <div class="card-body">
                                                <h5 class="card-title">{{this.Name}}</h5>
                                                <small class="text-muted">{{this.Category}}</small>
                                                <hr>
                                                <div class="text-left">
                                                  <p class="card-text">
                                                    {{this.Description}}
                                                    <p><strong>Genre :</strong> {{Category}}</p>
                                                    <p><strong>Language :</strong> {{Language}}</p>
                                                    <p><strong>Author :</strong> {{Author}}</p>
                                                    <p><strong>ISBN :</strong> {{ISBN}}</p>
                                                    <p><strong>Year of Publication :</strong> {{Publication}}</p>
                                                  </p>
                                                </div>
                                                <p class="card-text">
                                                  
                                                </p>
                                                <footer>
                                                  <a type="button" class="btn btn-light text-dark btn-sm mr-1 mb-2" href="/book-reviews/{{this._id}}">Rate Our Book</a>
                                                  <a href="{{this.Link}}" type="button" class="btn btn-success btn-sm px-3 mb-2 material-tooltip-main" data-toggle="tooltip"
                                                          data-placement="top" title="Add to wishlist"><i class="fas fa-shopping-cart pr-2"></i>Buy</a>
                                                </footer>
                                              </div>
                                            </div>
                                          </div>
                                        </div>
                                      </div>
                                    </div>
                                  </div>
                                  <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-mdb-dismiss="modal">
                                      Close
                                    </button>
                                  </div>
                                </div>
                              </div>
                            </div>





                    </div>
                </div>
            </div>
        {{/each}}
      </div>
    </div>
  </div>
