<div class="container h-100">
    <div class="row h-75 mt-4" style="overflow: auto;">
    {{#each comments}}
        <div class="col-md-4 mt-3">
            <div class="card">
                <div class="card-header">{{this.bookname}}</div>
                <div class="card-body">
                    <button type="button" class="btn btn-light"><i class="fas fa-star"></i><span class="badge bg-success ms-2">{{this.rating}}</span>
                                <span class="visually-hidden">unread messages</span>
                            </button>
                    <blockquote class="blockquote mb-0 mt-3">
                        <p>
                            {{this.Comments}}
                        </p>
                        <footer class="blockquote-footer">
                            User Name <cite title="Source Title">{{this.username}}</cite>
                        </footer>
                        </blockquote>
                    <a href="/admin/deleteComments/{{this._id}}" class="btn btn-danger mt-3">Delete</a>
                </div>
            </div>
        </div>
    {{/each}}
    </div>
</div>